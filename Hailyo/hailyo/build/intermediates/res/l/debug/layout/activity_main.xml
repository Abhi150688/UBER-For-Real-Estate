<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout12"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_background">


            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/root_view">

                <ViewFlipper android:id="@+id/ViewFlipper01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <fragment
                            android:id="@+id/map"
                            android:name="com.nexchanges.hailyo.ui.CustomMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="454dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/self_marker"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/ic_launcher" />
                    </FrameLayout>

                    <FrameLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <fragment
                            android:id="@+id/map2"
                            android:name="com.nexchanges.hailyo.ui.CustomMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="454dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/self_marker"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/ic_launcher2" />
                    </FrameLayout>

                    <FrameLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <fragment
                            android:id="@+id/map3"
                            android:name="com.nexchanges.hailyo.ui.CustomMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="454dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/self_marker"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/ic_launcher3" />
                    </FrameLayout>


                </ViewFlipper>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_gravity="top"
                    android:id="@+id/search_bar">


                    <TextView
                        android:id="@+id/SiteVisitLocation"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_height="wrap_content"
                        android:text="Site Visit Location"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#28b54c" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/searchLocation">


                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:src="@drawable/search"/>



                        <TextView
                            android:id="@+id/SiteVisitAddressBar"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@android:color/white"
                            android:hint="@string/placeholder"
                            android:layout_gravity="center_horizontal|top" />

                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_gravity="center_horizontal|bottom">


            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_span= "3"
                android:progressDrawable="@android:color/transparent"
                android:thumb="@drawable/seekthumb"
                android:max="100" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="@color/lightgrey"
            android:layout_gravity="center_horizontal|bottom">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/red"
                    android:text="@string/pbroker" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="@string/abroker" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:text="@string/bbroker" />


            </TableRow>

        </LinearLayout>


    </FrameLayout>




    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/theme_black"
        android:choiceMode="singleChoice"
        android:headerDividersEnabled="true"
        android:listSelector="@color/theme_yellow"
        />


</android.support.v4.widget.DrawerLayout><!-- From: file:/Users/Abhishek/Dropbox/Hailyo-Android/hailyo/Hailyo/hailyo/src/main/res/layout/activity_main.xml -->