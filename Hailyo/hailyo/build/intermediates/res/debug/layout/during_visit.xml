<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/blue_sky"
        android:textColor="@color/white"
        android:text="Site Visit in Progress"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/myphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/broker_plus_1"
                android:paddingLeft="60dp"
                android:paddingTop="5dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_weight=".2"
                />

            <LinearLayout
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bname"
                        android:layout_gravity="left"
                        android:text="Rajiv Lakhpati"
                        android:textSize="22dp"
                        android:paddingTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#28b54c" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spec"
                        android:layout_gravity="left"
                        android:textSize="22dp"
                        android:paddingTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#28b54c" />


                </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_gravity="top">


            <Button
                android:id="@+id/endvisit"
                android:padding="10dp"
                android:text="End Site Visit"
                android:layout_marginTop="40dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_gravity="center" >

            </Button>

            </LinearLayout>


        </LinearLayout>

        </LinearLayout><!-- From: file:/Users/Abhishek/Dropbox/Hailyo-Android/hailyo/Hailyo/hailyo/src/main/res/layout/during_visit.xml -->