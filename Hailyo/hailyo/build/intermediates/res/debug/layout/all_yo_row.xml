<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >


    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />


    <!--Spec Code -->
    <TextView
        android:id="@+id/speccode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <!-- Client Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_below="@+id/speccode"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/title"
        android:textStyle="bold" />


    <!-- Client Rating -->
    <TextView
        android:id="@+id/user_rating"
        android:layout_width="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/genre"
        android:textStyle="bold" />

    <!-- Client Type -->
    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_below="@+id/user_rating"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/genre"
        android:visibility="invisible"
        android:textStyle="bold" />



    <!-- Rightend Yo BUtton -->
    <ImageView android:layout_width="wrap_content"
        android:id="@+id/yo_button"
        android:layout_height="wrap_content"
        android:src="@drawable/yo_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


    <!-- Visits Conducted -->
    <TextView
        android:id="@+id/visit_count"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/user_type"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/genre"
        android:textStyle="bold" />


