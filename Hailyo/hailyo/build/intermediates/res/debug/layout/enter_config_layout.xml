<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:background="@color/blue_sky"
        android:textColor="@color/white"
        android:text="Enter Details"/>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:id="@+id/yourloc">


        <TextView
            android:id="@+id/yourchosenLocation"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="wrap_content"
            android:text="Site Visit Location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#28b54c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/searchLocation">


            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

        </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/yourmode">

        <TextView
            android:id="@+id/yourchosenMode"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="wrap_content"
            android:text="Intent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#28b54c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="SEE PROPERTY"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/seeprop" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey"
                android:textColor="@color/black"
                android:text="SHOW PROPERTY"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:id="@+id/showprop" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:id="@+id/nm_bhk">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center"
            >


        <TextView
            android:id="@+id/textViewconfig"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Size-BHK"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#28b54c" />

        <TextView
            android:id="@+id/tvconfigResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|center"
            android:textColor="#28b54c"
            android:gravity="center_horizontal"
            />

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/enterconfig">


            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/horizontal_number_picker3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:id="@+id/budget_pricing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center"
            >


        <TextView
            android:id="@+id/tvResult1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|center"
            android:textColor="#28b54c"
            android:text="Budget"></TextView>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|center"
            android:textColor="#28b54c"
           />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/enterpri">

            <include
                android:id="@+id/tableRow1_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/price" />



                <SeekBar
                    android:id="@+id/sbBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000000"></SeekBar>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/enterSalepri">

            <include
                android:id="@+id/tableRow1_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/pricesale" />



            <SeekBar
                android:id="@+id/sbSBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="150000000"></SeekBar>


        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="HAIL"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/hail" />

</LinearLayout>
