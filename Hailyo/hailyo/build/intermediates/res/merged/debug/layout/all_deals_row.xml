<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >


    <!-- Thumbnail Image -->
    <com.nexchanges.hailyo.customWidget.CircularNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="4dp"/>

    <!-- Apartment Name -->

    <TextView
        android:id="@+id/apartment_name"

        android:textColor="@color/white"
        android:background="@color/black"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginTop="2dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        />


    <!--User Name -->

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apartment_name"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/spec_code"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_height="wrap_content">
    <TableRow>
    <!-- Rent -->
    <TextView
        android:id="@+id/rent_amountv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/turquoise"
        android:layout_below="@id/user_name"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/rating" />

    <TextView
        android:id="@+id/rent_amount"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/turquoise"
        android:layout_below="@id/user_name"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/rent_amountv"
        android:textSize="@dimen/rating" />
    </TableRow>

        <TableRow>
    //Deposit
    <TextView
        android:id="@+id/deposit_amountv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rent_amount"
        android:layout_marginTop="2.7dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/rating"
        android:textColor="@color/turquoise"/>


    <TextView
        android:id="@+id/deposit_amount"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/turquoise"
        android:layout_below="@id/rent_amountv"
        android:layout_marginTop="2.7dip"
        android:layout_toRightOf="@+id/deposit_amountv"
        android:textSize="@dimen/rating" />
        </TableRow>

    <!-- Agreement start date  -->

        <TableRow>
    <TextView
        android:id="@+id/agr_start_datev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deposit_amount"
        android:layout_marginTop="2.7dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="@color/turquoise"
        android:textSize="@dimen/rating" />

    <TextView
        android:id="@+id/agr_start_date"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        android:background="@color/turquoise"
        android:layout_height="wrap_content"
        android:layout_below="@id/deposit_amount"
        android:layout_marginTop="2.7dip"
        android:layout_toRightOf="@+id/agr_start_datev"
        android:textSize="@dimen/rating" />

        </TableRow>
    </TableLayout>


    <!-- Offer Last Updated Date -->

    <TextView
        android:id="@+id/offer_up_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/date"/>
</RelativeLayout><!-- From: file:/Users/Abhishek/Dropbox/Hailyo-Android/hailyo/Hailyo/hailyo/src/main/res/layout/all_deals_row.xml -->