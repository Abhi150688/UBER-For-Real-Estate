<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >


    <!-- Thumbnail Image -->
    <com.nexchanges.hailyo.customWidget.CircularNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="105dp"

        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="4dp"/>

    <!-- Client Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_marginTop="3dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/user_name"
        android:textStyle="bold" />

    <!--Spec Code -->
    <TextView
        android:id="@+id/speccode"
        android:textColor="@color/white"
        android:background="@color/black"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginTop="2dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/spec_code"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/speccode"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/bid_button"/>



    <!-- Properties Visited -->
    <TextView
        android:id="@+id/prop_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/speccode"
        android:layout_marginTop="2.7dip"
        android:textColor="@color/lightgrey"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/prop_count" />


    <!-- Location -->
    <TextView
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prop_count"
        android:layout_marginTop="2.7dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/location" />


    <!-- Active Dealing Room - Yes or no -->

    <TextView
        android:id="@+id/activedealingroom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="2.7dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/status" />



    <!-- Date of Insepction -->
    <TextView
        android:id="@+id/visitdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/date" />


</RelativeLayout><!-- From: file:/Users/Abhishek/Dropbox/Hailyo-Android/hailyo/Hailyo/hailyo/src/main/res/layout/all_visits_row.xml -->