<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="About Hailyo"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:id="@+id/app_store"
        android:layout_marginLeft="2dp"
        android:textColor="@color/gray"
        android:text="Rate us on Google Play Store"
        android:background="@drawable/button_border"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facebook_like"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="2dp"
        android:textColor="@color/gray"
        android:text="Like us on facebook"
        android:background="@drawable/button_border"/>


    <Button
        android:layout_width="fill_parent"
        android:id="@+id/website"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="2dp"
        android:textColor="@color/gray"
        android:text="Visit our website - hailyo.com"
        android:background="@drawable/button_border"/>

</LinearLayout><!-- From: file:/Users/Abhishek/Dropbox/Hailyo-Android/hailyo/Hailyo/hailyo/src/main/res/layout/about_hailyo.xml -->