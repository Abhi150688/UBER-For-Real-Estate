<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:padding="3dp"
        android:text="RECEIPT"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:id="@+id/yourloc"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/searchLocation"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/clock"
                android:layout_weight="0.27"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/billed"
                android:text="Rs. 250 "/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="0dp"
                android:text="SITE VISIT FEEDBACK"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey"
                android:text="Number of Properties Visited?"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                />




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="4dp">



                <Button
                    android:layout_width="0dp"
                    android:id="@+id/value1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/button_border"
                    android:layout_weight="1"
                    android:text="1"/>

                <Button
                    android:layout_width="0dp"
                    android:id="@+id/value2"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="2"/>

                <Button
                    android:layout_width="0dp"
                    android:id="@+id/value3"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="3"/>

                <Button
                    android:layout_width="0dp"
                    android:id="@+id/value4"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="4+"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey"
                android:text="RATE YOUR SITE VISIT"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:gravity="center"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:clickable="true"
                    android:id="@+id/happy"
                    android:layout_height="60dp"
                    android:src="@drawable/thumbsup"
                    android:layout_marginRight="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/sad"
                    android:clickable="true"
                    android:layout_height="60dp"
                    android:src="@drawable/thumbsdown"
                    android:layout_marginLeft="15dp"
                    />


            </LinearLayout>

            <!--  <RatingBar
                  android:layout_width="wrap_content"

                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:id="@+id/ratingBar"
                  android:gravity="center"
                  android:layout_marginTop="10dp"

                  />-->






        </LinearLayout>


    </LinearLayout>
</LinearLayout><!-- From: file:/Users/Abhishek/Desktop/hailyo-master%204/Hailyo/hailyo/src/main/res/layout/give_rating.xml -->