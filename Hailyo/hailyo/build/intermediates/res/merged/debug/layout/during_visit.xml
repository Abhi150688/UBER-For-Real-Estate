<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="Site Visit in Progress"/>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >



                <ImageView
                    android:id="@+id/myphoto"
                    android:layout_marginLeft="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/roundbutton"
                    android:background="@null"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    />

            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bname"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#28b54c" />



            <View
                android:layout_width="fill_parent"
                android:background="@color/gray"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spec"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#28b54c" />

            <View
                android:layout_width="fill_parent"
                android:background="@color/gray"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:padding="2dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_gravity="center_horizontal|bottom">



                <Button
                    android:id="@+id/hailmode"
                    android:background="@drawable/button_border"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Make Notes" />

                <Button
                    android:id="@+id/activevisits"
                    android:background="@drawable/button_border"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="Give Offer" />

                <Button
                    android:background="@drawable/button_border"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/endvisit"
                    android:text="End Visit"/>


            </LinearLayout>





        </LinearLayout>




    </LinearLayout>



