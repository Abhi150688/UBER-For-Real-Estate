<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/seekArcContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.nexchanges.hailyo.customWidget.SeekArc
            android:id="@+id/seekRent"

            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_gravity="center"
            android:padding="30dp"
            seekarc:arcColor="@color/red"
            seekarc:clockwise="true"
            seekarc:max="150"
            seekarc:progressColor="@color/orange"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:thumb="@drawable/custom_seek_arc_control_selector"
            seekarc:touchInside="true" />

        <TextView
            android:id="@+id/seekArcProgress_Rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="40sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/seekArcContainer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.nexchanges.hailyo.customWidget.SeekArc
            android:id="@+id/seekSale"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            seekarc:arcColor="@color/red"
            seekarc:clockwise="true"
            seekarc:max="150"
            seekarc:progressColor="@color/orange"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:thumb="@drawable/custom_seek_arc_control_selector"
            seekarc:touchInside="true" />

        <TextView
            android:id="@+id/seekArcProgress_Sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="40sp" />
    </FrameLayout>


</LinearLayout>


</LinearLayout>
