<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:background="@color/gray"
    android:layout_height="fill_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="Enter Details"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:id="@+id/yourloc">


        <TextView
            android:id="@+id/yourchosenLocation"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="wrap_content"
            android:text="Site Visit Location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#28b54c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/searchLocation">


            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/yourmode">

        <TextView
            android:id="@+id/yourchosenMode"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="wrap_content"
            android:text="What do you wish to do? "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#28b54c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="SEE PROPERTY"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/seeprop" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="SHOW PROPERTY"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:id="@+id/showprop" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/outerhori">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:id="@+id/nm_bhk">

            <TextView
                android:id="@+id/yourpurpose"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_height="wrap_content"
                android:text="INTENT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#28b54c" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:gravity="center">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RENT"
                    android:id="@+id/checkRENT"
                    android:layout_gravity="center_horizontal" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALE"
                    android:id="@+id/checkSALE"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:background="@android:color/white">

                <TextView
                    android:id="@+id/textViewconfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIZE"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#28b54c" />

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal|center_vertical"
               android:gravity="center">

               <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                   android:id="@+id/horizontal_number_picker3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2.25dp"
                   android:text="BHK"
                   android:textSize="16.5dp"
                   />



           </LinearLayout>

            </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:id="@+id/budget_pricing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tvResult1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center_horizontal|center"
                android:textColor="#28b54c"
                android:text="Budget"/>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center_horizontal|center"
                android:textColor="#28b54c"
                />
        </LinearLayout>

        <include layout="@layout/price"
            android:layout_width="fill_parent"
            android:id="@+id/rentpricetext"
            android:layout_height="wrap_content" />

        <include layout="@layout/pricesale"
            android:id="@+id/salepricetext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />


        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="1000000"
            android:id="@+id/rentbar"
            android:thumb="@drawable/seekthumb_tur"
            android:background="@color/transparent"
            android:layout_marginBottom="5dp"/>


        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100000000"
            android:id="@+id/salebar"
            android:visibility="invisible"
            android:thumb="@drawable/seekthumb_tur"
            android:background="@color/transparent"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="5dp">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/turquoise"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="HAIL"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:id="@+id/hail" />
    </LinearLayout>




</LinearLayout>