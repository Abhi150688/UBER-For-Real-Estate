<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout12"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_background">


            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/root_view">

                <fragment
                    android:id="@+id/map"
                    android:name="com.nexchanges.hailyo.ui.CustomMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="454dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cancel_visit"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/cancel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:textSize="20dp"
                    android:id="@+id/timer"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"/>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_gravity="center_horizontal|bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/broker_plus_1"
                    android:paddingLeft="75dp"
                    android:paddingTop="5dp"
                    android:layout_weight=".35"
                    />


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    >



                <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/bname"
                   android:layout_gravity="center_horizontal|center"
                   android:gravity="center"

                   android:textSize="25dp"
                   android:textAppearance="?android:attr/textAppearanceMedium"
                   android:textColor="#28b54c" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="40dp"

                        />



            </LinearLayout>
                </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:text="CALL"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_weight=".5"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/call" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:text="MESSAGE"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="5dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:id="@+id/message" />

            </LinearLayout>



        </LinearLayout>


    </FrameLayout>


    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/theme_black"
        android:choiceMode="singleChoice"
        android:headerDividersEnabled="true"
        android:listSelector="@color/theme_yellow"
        />


</android.support.v4.widget.DrawerLayout>